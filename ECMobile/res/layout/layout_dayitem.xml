<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout         
    android:id="@+id/layout_dayitem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="49dp"
    android:layout_height="49dp" >

    <TextView
        android:id="@+id/layout_dayitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="1"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/layout_dayitem_background"
         android:layout_centerInParent="true"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:background="@drawable/yellowcircle"
       	android:visibility="gone"/>

    <TextView
        android:id="@+id/layout_dayitem_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_dayitem_date"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="#2E5892"
        android:textSize="9dp" 
android:visibility="gone"
        />

    <TextView
        android:id="@+id/layout_dayitem_detail_pic"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/layout_dayitem_date"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="#2E5892"
        android:textSize="9dp"
        />

    <ImageView
        android:id="@+id/layout_dayitem_rounddot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>

</RelativeLayout>
