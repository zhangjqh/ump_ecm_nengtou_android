<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_detail_bottom"
    android:layout_width="fill_parent"
    android:layout_height="49dp"
    android:background="@drawable/common_bg_bottom"
    android:orientation="horizontal" >
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/common_bg_bottom"
	    android:orientation="horizontal" >
	    
        <TextView
            android:id="@+id/bottom_btn1"
            android:textColor="#e50011"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />
	    
        <TextView
            android:id="@+id/bottom_btn3"
            android:textColor="#e50011"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />
          <TextView
            android:id="@+id/bottom_btn4"
            android:textColor="#e50011"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/bottom_btn2"
            android:textColor="#e50011"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />
        
    </LinearLayout>

</RelativeLayout>
