<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="bottom"
        android:paddingTop="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="28dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/task_history_headicon" />

            <TextView
                android:id="@+id/taskasd_itemstyle2_nameTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/taskasd_itemstyle2_actionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       	<ImageView
	     	android:id="@+id/task_history_picImageView"
	        android:layout_width="44dp"
	        android:layout_height="44dp"
			android:layout_alignParentLeft="true"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="35dp"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/pen"
	        android:visibility="gone" />
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:paddingLeft="15dp"
		        android:paddingRight="15dp"
		        android:gravity="center_vertical" >

        		<ImageView
		            android:id="@+id/taskasd_itemstyle2_arrowImageView"
		            android:layout_width="8dp"
		            android:layout_height="13dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/wadetail_row_array" />
        		<TextView
		            android:id="@+id/taskasd_itemstyle2_noteTextView"
		            android:layout_width="300.0dp"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:singleLine="true"
		            android:text="123123"
		            android:textSize="16sp" />
   			 </RelativeLayout>

    		<TextView
		        android:id="@+id/taskasd_itemstyle2_dateTextView"
		        android:layout_width="match_parent"
		        android:layout_height="24dp"
		        android:gravity="right|center_vertical"
		        android:paddingBottom="8dp"
		        android:paddingLeft="15dp"
		        android:paddingRight="28dp"
		        android:textSize="14sp" />
          </LinearLayout>
    </LinearLayout>
</LinearLayout>
