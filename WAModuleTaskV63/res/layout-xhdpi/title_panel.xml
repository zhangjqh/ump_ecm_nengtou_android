<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/nav"
    android:paddingLeft="@dimen/commonPadding"
  >
    <Button
        android:id="@+id/titlePanel_backBtn"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:text="@string/back"
        android:textSize="17dp"
        android:textColor="#e50011"
        android:background="@drawable/btn_back"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/titlePanel_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="17dp" />

    <Button
        android:id="@+id/titlePanel_rightBtn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />
    <Button
        android:id="@+id/titlePanel_rightTextBtn"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>