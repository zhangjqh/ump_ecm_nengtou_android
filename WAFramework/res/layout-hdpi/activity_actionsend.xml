<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/acitonsendlayout"
            android:layout_width="match_parent"
            android:layout_height="380px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ationsend_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="66px"
                android:layout_marginTop="20dp"
                android:background="@drawable/actionsend_red"
                android:gravity="center"
                android:text="打电话"
                       android:layout_marginLeft="8dp"
                                 android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="66px"
                android:layout_marginTop="5dp"
                 android:background="@drawable/actionsend_white"
                                android:gravity="center"
                android:text="发短信"
                       android:layout_marginLeft="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
                <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/actionsend_red"
                android:gravity="center"
                android:text="打电话"
                       android:layout_marginLeft="8dp"
                                 android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="gone" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="66px"
                android:layout_alignLeft="@+id/textView5"
                       android:layout_marginTop="15dp"
                         android:layout_marginLeft="8dp"
                android:layout_below="@+id/textView1"
          
                    android:background="@drawable/actionsend_gray"
                    android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>