<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/base_background" >
    <RelativeLayout
        android:id="@android:id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_title_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:text="@string/about"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/commonPadding"
            android:background="@drawable/common_button_title_back" 
                   android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white" />



    </RelativeLayout>
    <ImageView
        android:id="@+id/apploginImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/Versiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/apploginImageView"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/apploginImageView"
        android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="italic"
        android:text="Version1.0" />
    
</RelativeLayout>
