<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:gravity="center_horizontal"
      android:background="@drawable/base_background" >

    <ImageView
        android:id="@+id/apploginImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" />

    <LinearLayout
        android:id="@+id/setconnection_conf_panel"
        android:layout_width="296dp"
        android:layout_height="166dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/setconnection_conf_bg" >

        <TextView
            android:id="@+id/setconnection_pannelText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/serverIP" 
            android:layout_marginLeft="9dp"
            android:textSize="18sp"
           android:textColor="@color/darkblue" />

        <RelativeLayout 
        android:layout_width="296dp"
        android:layout_height="44dp"
            android:layout_marginTop="7dp" >

            <EditText
                android:id="@+id/setconnection_ipEditText"
                android:layout_width="169dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:background="@null"
                android:ems="10"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:textSize="15sp" >

            </EditText>

		    <EditText
		        android:id="@+id/setconnection_portEditText"
		        android:layout_width="75dp"
		        android:layout_height="44dp"
                android:layout_marginRight="19dp"
                android:layout_alignParentRight="true"
		        android:background="@null"
		        android:maxLength="5"
		        android:paddingLeft="4dp"
		        android:paddingRight="6dp"
		        android:singleLine="true"
		        android:textSize="15sp" 
		        />
		    
        </RelativeLayout>
	    <Button
	        android:id="@+id/setconnection_saveButton"
	        android:layout_width="254dp"
	        android:layout_height="43dp"
	        android:layout_marginTop="14dp"
	        android:text="@string/save"
            android:textSize="20sp" 
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:background="@drawable/common_button_green_short_bg" />
    </LinearLayout>
</LinearLayout>