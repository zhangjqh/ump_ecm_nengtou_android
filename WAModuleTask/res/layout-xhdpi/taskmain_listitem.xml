<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF" />
<RelativeLayout
    android:id="@+id/taskmainlistitem_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/commonPadding"
    android:paddingRight="@dimen/commonPadding"
    android:paddingTop="15dp"
    android:paddingBottom="15dp" >
    <ImageView
        android:id="@+id/taskmainlistitem_typeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />
    <ImageView
        android:id="@+id/taskmainlistitem_arrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/wadetail_row_array" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/taskmainlistitem_typeImageView"
        android:layout_toLeftOf="@id/taskmainlistitem_arrowImageView"
        android:layout_marginLeft="18dp"
        android:paddingRight="@dimen/commonPadding"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/taskmainlistitem_titleTextView_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/commonFontSizeLarge" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/taskmainlistitem_dateTextView"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:textSize="@dimen/commonFontSizeLittle" />

	        <TextView
	            android:id="@+id/taskmainlistitem_titleTextView_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@+id/taskmainlistitem_dateTextView"
	            android:singleLine="true"
	            android:layout_alignParentLeft="true"
	            android:textSize="@dimen/commonFontSizeLarge" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4B4B4" />

</LinearLayout>