<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/commonPadding" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:paddingRight="24px"
            android:gravity="bottom" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="@dimen/commonPadding"
	                android:src="@drawable/task_history_headicon" />
	            <TextView
	                android:id="@+id/taskasd_itemstyle2_nameTextView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/commonFontSizeMid" />
            </LinearLayout>
            <TextView
                android:id="@+id/taskasd_itemstyle2_actionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/commonFontSizeMid" />
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="48px"
             android:gravity="center_vertical" >
             <ImageView
		        android:id="@+id/taskasd_itemstyle2_arrowImageView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:src="@drawable/wadetail_row_array" />
             <TextView
	            android:id="@+id/taskasd_itemstyle2_noteTextView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/taskasd_itemstyle2_arrowImageView"
	            android:gravity="center_vertical"
	            android:textSize="@dimen/commonFontSizeLittle"
	            android:singleLine="true" />
         </RelativeLayout>
        
        <TextView
            android:id="@+id/taskasd_itemstyle2_dateTextView"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:paddingRight="24px"
            android:textSize="@dimen/commonFontSizeLittle"
            android:gravity="right|center_vertical" />
</LinearLayout>