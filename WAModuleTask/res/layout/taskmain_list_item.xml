<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    tools:context="wa.android.task.adapter.TaskListAdapter" >

  <!--    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF" />-->
<RelativeLayout
    android:id="@+id/taskmainlistitem_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="13dp"
    android:paddingBottom="13dp" >
    <ImageView
        android:id="@+id/taskmainlistitem_typeImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <ImageView
        android:id="@+id/taskmainlistitem_arrowImageView"
        android:layout_width="8dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/wadetail_row_array" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/taskmainlistitem_typeImageView"
        android:layout_toLeftOf="@id/taskmainlistitem_arrowImageView"
        android:layout_marginLeft="3dp"
        android:paddingRight="8dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/taskmainlistitem_titleTextView_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="16sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/taskmainlistitem_titleTextView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:gravity="left"
                android:textSize="13sp" 
                android:textColor="#0852a5"/>

	        <TextView
	            android:id="@+id/taskmainlistitem_dateTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:gravity="right"
	            android:singleLine="true"
	            android:textColor="#0852a5"
	            android:textSize="13sp" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4B4B4" /> -->
</LinearLayout>